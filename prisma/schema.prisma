generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String        @id @default(uuid()) @map("_id")
  name        String?
  email       String        @unique
  password    String
  subjects    Subject[] 
  Rating      Rating[]
}

model Subject {
  id     Int           @id @default(autoincrement())
  name   String
  rating Int
  User   User?         @relation(fields: [userId], references: [id])
  userId String?
  Rating Rating[]
}



model Rating {
  id            Int          @id @default(autoincrement())
  title         String
  value         Int
  userId        String
  subjectId     Int
  user          User         @relation(fields: [userId], references: [id])
  subject       Subject      @relation(fields: [subjectId], references: [id])
}
